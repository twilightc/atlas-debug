<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h3>ChatGPT Atlas 判定結果</h3>
    <script>
      function isAtlas() {
        const hasFilePicker = 'showOpenFilePicker' in window;
        const hasMediaDevices = !!(
          navigator.mediaDevices && navigator.mediaDevices.getUserMedia
        );
        const hasNotification = 'Notification' in window;

        // Atlas determine?
        return !hasFilePicker && !hasMediaDevices && hasNotification;
      }

      const result = {
        userAgent: navigator.userAgent,
        isAtlas: isAtlas(),
        showOpenFilePicker: 'showOpenFilePicker' in window,
        mediaDevices: !!(
          navigator.mediaDevices && navigator.mediaDevices.getUserMedia
        ),
        notificationAPI: 'Notification' in window,
      };

      document.body.innerHTML += JSON.stringify(result, null, 2);
    </script>
  </body>
</html>
